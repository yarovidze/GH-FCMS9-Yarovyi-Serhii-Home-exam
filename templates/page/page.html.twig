{#
/**
 * @file
 * Template for the main page.
 */
#}
<div class="page">
    {% embed '@radix/navbar/navbar.twig' with {
        placement: 'sticky-top-custom',
        container: 'fixed',
        color: 'light',
        utility_classes: ['bg-white-custom'],
    } %}

        {% block branding %}
            {% if page.navbar_branding %}
                {{ page.navbar_branding }}
            {% endif %}
        {% endblock %}

        {% block left %}
            {% if page.navbar_left %}
                <div class="mr-auto">
                    {{ page.navbar_left }}
                </div>
            {% endif %}
        {% endblock %}

        {% block right %}
            {% if page.navbar_right %}
                {{ page.navbar_right }}
            {% endif %}
        {% endblock %}
    {% endembed %}

    <main>
      <header>
        {% if page.breadcrumb %}
          {{ page.breadcrumb }}
        {% endif %}
      </header>
      <div class="container">
      <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
        {% if page.content %}
            <div class="page__content">
                    {{ page.content }}
            </div>
        {% endif %}
        </div>
        <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
          {% if page.right %}
            <div class="page__content">
              {{ page.right }}
            </div>
          {% endif %}
        </div>
      </div>
      </div>
    </main>

    {% if page.footer %}
        <footer class="page__footer">
                    {{ page.footer }}
        </footer>
    {% endif %}
</div>
